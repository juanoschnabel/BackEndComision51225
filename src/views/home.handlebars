<div class="card-group d-flex">
  <div
    class="row row-cols-1 row-cols-md-3 row-cols-lg-4 col-sm-12"
    id="producto"
  >
    {{#each products}}
      <div class="card">
        <div class="text-center">
          <source srcset="..." type="image/svg+xml" />
          <img
            src="{{this.thumbnail}}"
            class="img-fluid img-thumbnail"
            alt="Imagen del producto"
          /></div>
        <div class="card-body">
          <h5 class="card-title">titulo: {{this.title}}</h5>
          <p class="card-text">descripcion: {{this.description}}</p>
          <p class="card-text">precio: {{this.price}}</p>
          <p class="card-text">codigo: {{this.code}}</p>
          <p class="card-text">stock: {{this.stock}}</p>
          <p class="card-text">estado: {{this.status}}</p>
          <p class="card-text">categoria: {{this.category}}</p>
          <p class="card-text">id: {{this.id}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>