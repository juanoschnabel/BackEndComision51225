<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{titulo}}</title>
  </head>

  <body>
    <button onclick="location.href='/api/products'">VOLVER</button>
    <main class="row justify-content-center">
      <form
        class="mt-2 col-9 col-md-4 align-items-sm-center"
        id="form"
        action="/api/products/realtimeproducts"
        method="post"
      >
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fs-5">TITULO</label>
          <input
            type="text"
            class="form-control"
            id="titulo"
            name="title"
            aria-describedby="emailHelp"
            required
          />
        </div>
        <div class="mb-3">
          <label
            for="exampleInputEmail1"
            class="form-label fs-5"
          >DESCRIPCIÓN</label>
          <input
            type="text"
            class="form-control"
            id="descripcion"
            name="description"
            aria-describedby="emailHelp"
            required
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fs-5">PRECIO</label>
          <input
            type="number"
            class="form-control"
            id="precio"
            name="price"
            aria-describedby="emailHelp"
            required
          />
        </div>
        <div class="mb-3">
          <label
            for="exampleInputEmail1"
            class="form-label fs-5"
          >CATEGORIA</label>
          <input
            type="text"
            class="form-control"
            id="categoria"
            name="category"
            aria-describedby="emailHelp"
            required
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fs-5">STOCK</label>
          <input
            type="number"
            class="form-control"
            id="stock"
            name="stock"
            aria-describedby="emailHelp"
            required
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fs-5">STATUS</label>
          <input
            type="boolean"
            class="form-control"
            id="status"
            name="status"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fs-5">IMAGEN</label>
          <input
            type="text"
            class="form-control"
            id="imagen"
            name="thumbnail"
            aria-describedby="emailHelp"
            required
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fs-5">CÓDIGO</label>
          <input
            type="text"
            name="code"
            class="form-control"
            id="codigo"
            aria-describedby="emailHelp"
            required
          />
        </div>
        <input
          type="submit"
          class="btn btn-primary align-items-center"
          value="Crear"
        />
      </form>
    </main>
    <div class="card-group d-flex">
      <div
        class="row row-cols-1 row-cols-1 row-cols-md-3 row-cols-lg-4 col-sm-12"
        id="producto"
      >
        {{#each products}}
          <div class="card">
            <div class="text-center">
              <source srcset="..." type="image/svg+xml" />
              <img
                src="{{this.thumbnail}}"
                class="img-fluid img-thumbnail"
                alt="Imagen del producto"
              />
            </div>
            <div class="card-body">
              <h5 class="card-title">titulo: {{title}}</h5>
              <p class="card-text">descripcion: {{description}}</p>
              <p class="card-text">precio: {{price}}</p>
              <p class="card-text">codigo: {{code}}</p>
              <p class="card-text">stock: {{stock}}</p>
              <p class="card-text">estado: {{status}}</p>
              <p class="card-text">categoria: {{category}}</p>
              <p class="card-text">ID: {{_id}}</p>

            </div>
            <div id="inputDelete">
              <form action="/api/products/realtimeproducts" method="post">
                <button
                  class="btn btn-primary"
                  type="submit"
                  name="borrar"
                  value="{{this._id}}"
                >ELIMINAR</button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

  </body>
</html>